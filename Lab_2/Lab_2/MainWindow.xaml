<Window x:Class="Lab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2"
        mc:Ignorable="d"
        Title="Infix evaluation" SizeToContent="WidthAndHeight">
    <Grid RenderTransformOrigin="0.5,0.5" Width="250" Height="400">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform/>
                <TranslateTransform X="1"/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Button x:Name="Button1" Content="Calculate" HorizontalAlignment="Left" Margin="20,270,0,0" VerticalAlignment="Top" Click="Button_Click_1" Width="90"/>
        <TextBox x:Name="TextBoxEval" HorizontalAlignment="Right" Margin="0,354,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" IsReadOnly="True"/>
        <DataGrid x:Name="DataGrid1" Margin="20,60,20,148" IsManipulationEnabled="True" Height="180"/>
        <TextBox x:Name="TextBoxInfix" HorizontalAlignment="Right" Margin="0,314,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" IsReadOnly="True"/>
        <TextBox x:Name="TextBoxPrefix" HorizontalAlignment="Right" Margin="0,24,20,0" TextWrapping="Wrap" Text="- - x" VerticalAlignment="Top" Width="160"/>
        <Label Content="Prefix" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Infix" HorizontalAlignment="Left" Margin="20,310,0,0" VerticalAlignment="Top"/>
        <Label Content="Eval" HorizontalAlignment="Left" Margin="20,350,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Button2" Content="History" HorizontalAlignment="Left" Margin="140,270,0,0" VerticalAlignment="Top" Click="Button_Click_2" Width="90"/>
    </Grid>
</Window>
