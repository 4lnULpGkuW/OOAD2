<Window x:Class="Lab_3.PatternlessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_3"
        mc:Ignorable="d"
        Title="PatternlessWindow" Height="300" Width="250" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Margin="32,20,23,-59" Orientation="Vertical">
            <ComboBox x:Name="Combox1" Height="22" Width="186"/>
            <Button x:Name="ButtonAdd" Content="Add Aircraft" Click="ButtonAdd_Click" Height="20" Width="186"/>
            <Button x:Name="ButtonLand" Content="Land" Click="ButtonLand_Click" Height="20" Width="186"/>
            <Button x:Name="ButtonTakeoff" Content="Take off" RenderTransformOrigin="0.664,-0.068" Click="ButtonTakeoff_Click" Height="20" Width="186"/>
            <Button x:Name="ButtonRemove" Content="Remove Aircraft" Click="ButtonRemove_Click" Height="20" Width="186"/>
            <TextBox x:Name="TextBoxRunways" TextWrapping="Wrap" Text="Runways" Width="186"/>
            <TextBox x:Name="TextBoxTerminals" TextWrapping="Wrap" Text="Terminals" Width="186"/>

            <ListBox x:Name="LogListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Height="150" Width="186"/>
        </StackPanel>

    </Grid>
</Window>
