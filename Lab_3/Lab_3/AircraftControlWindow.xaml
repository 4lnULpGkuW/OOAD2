<Window x:Class="Lab_3.AircraftControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_3"
        mc:Ignorable="d"
        Title="AircraftControl" Height="200" Width="250" SizeToContent="Height">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Margin="0,20,0,20">
            <Label Content="Registration code"/>
            <Label x:Name="LabelRegCode" Content=""/>
            <Label Content="Status"/>
            <Label x:Name="LabelStatus" Content=""/>
            <Button x:Name="ButtonRequest" Content="Request" Click="ButtonRequest_Click"/>
            <Button x:Name="ButtonLeave" Content="Leave" Click="ButtonLeave_Click"/>

        </StackPanel>

    </Grid>
</Window>
